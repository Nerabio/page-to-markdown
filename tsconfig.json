{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "types": ["node"],
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "es2018"],
    "declaration": true,
    "declarationDir": "build", //.d.ts
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
 }

